---
import "../styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-slate-900 text-slate-100 min-h-screen font-sans antialiased">
    <header class="p-4 border-b border-slate-800">
      <nav class="max-w-4xl mx-auto flex justify-center items-center">
        <a
          href="/"
          class="text-3xl md:text-4xl font-bold text-yellow-500 hover:text-yellow-400"
          >Yellow Truck HotSauce</a
        >
      </nav>
    </header>
    <main class="max-w-4xl mx-auto p-4">
      <slot />
    </main>
    <footer class="p-8 text-center text-slate-500 text-sm">
      &copy; {new Date().getFullYear()} Yellow Truck HotSauce
    </footer>
  </body>
</html>
