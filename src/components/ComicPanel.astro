---
interface Props {
    imageUrl: string;
}

const { imageUrl } = Astro.props;
---

<div
    class="comic-panel p-4 md:p-8 bg-slate-800/50 backdrop-blur-md rounded-2xl shadow-2xl border border-slate-700/50 relative overflow-hidden group h-full w-full flex items-center justify-center"
>
    <!-- Background glow -->
    <div
        class="absolute -top-24 -left-24 w-48 h-48 bg-yellow-500/10 rounded-full blur-3xl group-hover:bg-yellow-500/20 transition-colors duration-700"
    >
    </div>

    <div
        class="relative w-full h-full flex items-center justify-center max-w-[min(100%,80vh)] aspect-square"
    >
        <div
            class="absolute -inset-2 bg-gradient-to-r from-yellow-500 to-orange-600 rounded-lg blur opacity-20 group-hover:opacity-40 transition duration-1000"
        >
        </div>
        {
            imageUrl.toLowerCase().endsWith(".mp4") ? (
                <video
                    src={imageUrl}
                    class="relative rounded-lg w-full h-full border-2 border-slate-950 shadow-inner object-cover shadow-2xl mb-4"
                    autoplay
                    loop
                    controls
                    playsinline
                />
            ) : (
                <img
                    src={imageUrl}
                    alt="Comic Panel"
                    class="relative rounded-lg w-full h-full border-2 border-slate-950 shadow-inner object-cover shadow-2xl"
                    loading="lazy"
                />
            )
        }
    </div>
</div>

<style>
    .comic-panel {
        font-family: "Bangers", cursive, "Courier New", Courier, monospace;
    }
</style>
